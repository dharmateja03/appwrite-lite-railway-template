# Core
APPWRITE_VERSION=1.8.0
MARIADB_VERSION=11.4
REDIS_VERSION=7.2-alpine

# Appwrite runtime
_APP_ENV=production
_APP_OPENSSL_KEY_V1=replace_with_hex_32_bytes
_APP_DOMAIN=localhost
_APP_DOMAIN_TARGET_CNAME=localhost
_APP_SYSTEM_EMAIL_NAME=Appwrite
_APP_SYSTEM_EMAIL_ADDRESS=team@example.com
_APP_SYSTEM_SECURITY_EMAIL_ADDRESS=security@example.com

# Database
_APP_DB_HOST=mariadb
_APP_DB_PORT=3306
_APP_DB_SCHEMA=appwrite
_APP_DB_USER=appwrite
_APP_DB_PASS=replace_with_strong_password
_APP_DB_ROOT_PASS=replace_with_root_password
MYSQL_ROOT_PASSWORD=replace_with_root_password

# Redis
_APP_REDIS_HOST=redis
_APP_REDIS_PORT=6379

# Lightweight defaults
_APP_OPTIONS_ROUTER_FORCE_HTTPS=disabled
_APP_OPTIONS_ABUSE=enabled
_APP_USAGE_STATS=disabled
_APP_STORAGE_ANTIVIRUS=disabled
_APP_STORAGE_DEVICE=local

# Disable heavy optional surfaces in lite mode
_APP_DOMAIN_FUNCTIONS=
_APP_DOMAIN_SITES=
_APP_FUNCTIONS_RUNTIMES=
